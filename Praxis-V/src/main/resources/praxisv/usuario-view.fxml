<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="praxisv.UsuarioController"
      alignment="CENTER" spacing="10"
      prefWidth="400" prefHeight="400">

    <Label text="Cadastro de Usuário" style="-fx-font-size: 20px;" />

    <TextField fx:id="nomeCompletoField" promptText="Nome completo" maxWidth="300"/>
    <TextField fx:id="cpfField" promptText="CPF" maxWidth="300"/>
    <TextField fx:id="emailField" promptText="E-mail" maxWidth="300"/>
    <TextField fx:id="cargoField" promptText="Cargo" maxWidth="300"/>
    <TextField fx:id="loginField" promptText="Login" maxWidth="300"/>
    <PasswordField fx:id="senhaField" promptText="Senha" maxWidth="300"/>
    <PasswordField fx:id="senhaConfirmField" promptText="Confirmação Senha" maxWidth="300"/>
    <ComboBox fx:id="perfilComboBox" promptText="Perfil" maxWidth="300"/>

    <Button text="Cadastrar" onAction="#onCadastrarClick" maxWidth="150"/>


    <TableView fx:id="usuarioTable" prefWidth="700" prefHeight="300">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNome" text="Nome" prefWidth="150"/>
            <TableColumn fx:id="colEmail" text="E-mail" prefWidth="150"/>
            <TableColumn fx:id="colCargo" text="Cargo" prefWidth="100"/>
            <TableColumn fx:id="colLogin" text="Login" prefWidth="100"/>
            <TableColumn fx:id="colPerfil" text="Perfil" prefWidth="100"/>
        </columns>
    </TableView>


</VBox>
